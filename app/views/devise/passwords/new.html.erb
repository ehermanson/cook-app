<%= render "devise/shared/form_start" %>
<h2 class="form-title">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Reset My Password", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= render "devise/shared/form_end" %>